<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrownRFEP_Reader.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:CrownRFEP_Reader.Views"
    Shell.NavBarIsVisible="False"
    Title="CrownRFEP Reader"
    Shell.FlyoutBehavior="Disabled">

    <!-- Root sections (no UI): las pestaÃ±as superiores custom navegan a estos root routes -->
    <FlyoutItem Route="dashboard" FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate views:DashboardPage}" Route="DashboardPage" />
    </FlyoutItem>

    <FlyoutItem Route="athletes" FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate views:AthletesPage}" Route="AthletesPage" />
    </FlyoutItem>

    <FlyoutItem Route="import" FlyoutItemIsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate views:ImportPage}" Route="ImportPage" />
    </FlyoutItem>

</Shell>

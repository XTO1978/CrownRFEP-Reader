<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Color de acento (cian) utilizado en la app -->
    <Color x:Key="AppAccentCyan">#FF6DDDFF</Color>

    <!-- Typography (SF Pro on Apple; Segoe UI on Windows; OpenSans elsewhere)
         Nota: No se incluyen archivos SF Pro por licencia; en Apple se usa la fuente del sistema.
         En Windows usamos Segoe UI que es la fuente nativa del sistema. -->
    <OnPlatform x:TypeArguments="x:String" x:Key="AppFontBody">
        <On Platform="iOS" Value="SF Pro Text" />
        <On Platform="MacCatalyst" Value="SF Pro Text" />
        <On Platform="WinUI" Value="OpenSansRegular" />
        <On Platform="Default" Value="OpenSansRegular" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:String" x:Key="AppFontEmphasis">
        <On Platform="iOS" Value="SF Pro Text" />
        <On Platform="MacCatalyst" Value="SF Pro Text" />
        <On Platform="WinUI" Value="OpenSansSemibold" />
        <On Platform="Default" Value="OpenSansSemibold" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:String" x:Key="AppFontDisplay">
        <On Platform="iOS" Value="SF Pro Display" />
        <On Platform="MacCatalyst" Value="SF Pro Display" />
        <On Platform="WinUI" Value="OpenSansSemibold" />
        <On Platform="Default" Value="OpenSansSemibold" />
    </OnPlatform>

    <!-- Fuente monoespaciada para contadores/valores numéricos -->
    <OnPlatform x:TypeArguments="x:String" x:Key="AppFontMono">
        <On Platform="iOS" Value="Menlo" />
        <On Platform="MacCatalyst" Value="Menlo" />
        <On Platform="WinUI" Value="Consolas" />
        <On Platform="Android" Value="monospace" />
        <On Platform="Default" Value="monospace" />
    </OnPlatform>

    <!-- Fuente de iconos (Segoe Fluent Icons on Windows, SF Symbols on Apple) -->
    <OnPlatform x:TypeArguments="x:String" x:Key="AppFontSymbols">
        <On Platform="iOS" Value="SF Pro Text" />
        <On Platform="MacCatalyst" Value="SF Pro Text" />
        <On Platform="WinUI" Value="Segoe Fluent Icons" />
        <On Platform="Default" Value="Segoe Fluent Icons" />
    </OnPlatform>

    <!-- ====================================================================
         ADAPTIVE FONT SIZES
         Tamaños de fuente adaptativos por plataforma.
         Windows usa tamaños más compactos para mayor densidad de información.
         ==================================================================== -->
    <OnPlatform x:TypeArguments="x:Double" x:Key="FontSizeCaption">
        <On Platform="WinUI" Value="9" />
        <On Platform="MacCatalyst" Value="13" />
        <On Platform="Default" Value="11" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="FontSizeSmall">
        <On Platform="WinUI" Value="12" />
        <On Platform="MacCatalyst" Value="14" />
        <On Platform="Default" Value="12" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="FontSizeBody">
        <On Platform="WinUI" Value="12" />
        <On Platform="MacCatalyst" Value="16" />
        <On Platform="Default" Value="14" />
    </OnPlatform>

    <!-- Alias de compatibilidad: algunas vistas antiguas usan FontSizeMedium -->
    <OnPlatform x:TypeArguments="x:Double" x:Key="FontSizeMedium">
        <On Platform="WinUI" Value="12" />
        <On Platform="MacCatalyst" Value="16" />
        <On Platform="Default" Value="14" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="FontSizeSubtitle">
        <On Platform="WinUI" Value="12" />
        <On Platform="MacCatalyst" Value="18" />
        <On Platform="Default" Value="16" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="FontSizeTitle">
        <On Platform="WinUI" Value="16" />
        <On Platform="MacCatalyst" Value="22" />
        <On Platform="Default" Value="20" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="FontSizeHeader">
        <On Platform="WinUI" Value="18" />
        <On Platform="MacCatalyst" Value="26" />
        <On Platform="Default" Value="24" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="FontSizeDisplay">
        <On Platform="WinUI" Value="22" />
        <On Platform="MacCatalyst" Value="34" />
        <On Platform="Default" Value="32" />
    </OnPlatform>

    <!-- ====================================================================
         ADAPTIVE SPACING
         Espaciados adaptativos - Windows usa espaciados más compactos.
         ==================================================================== -->
    <OnPlatform x:TypeArguments="x:Double" x:Key="SpacingXSmall">
        <On Platform="WinUI" Value="6" />
        <On Platform="Default" Value="4" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="SpacingSmall">
        <On Platform="WinUI" Value="6" />
        <On Platform="Default" Value="8" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="SpacingMedium">
        <On Platform="WinUI" Value="10" />
        <On Platform="Default" Value="12" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="SpacingLarge">
        <On Platform="WinUI" Value="14" />
        <On Platform="Default" Value="16" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="SpacingXLarge">
        <On Platform="WinUI" Value="20" />
        <On Platform="Default" Value="24" />
    </OnPlatform>

    <!-- ====================================================================
         ADAPTIVE PANEL WIDTHS
         Anchos de paneles laterales - Windows usa paneles más estrechos.
         ==================================================================== -->
    <OnPlatform x:TypeArguments="x:Double" x:Key="SidebarWidthDefault">
        <On Platform="WinUI" Value="260" />
        <On Platform="iOS" Value="240" />
        <On Platform="Default" Value="380" />
    </OnPlatform>

    <!-- ====================================================================
         ADAPTIVE GALLERY COLUMNS
         Número de columnas en galerías de video - iOS usa menos columnas.
         ==================================================================== -->
    <OnPlatform x:TypeArguments="x:Int32" x:Key="GalleryColumnCount">
        <On Platform="iOS" Value="3" />
        <On Platform="Default" Value="4" />
    </OnPlatform>

    <!-- ====================================================================
         ADAPTIVE ELEMENT HEIGHTS
         Alturas de elementos UI - Windows usa elementos más compactos.
         ==================================================================== -->
    <OnPlatform x:TypeArguments="x:Double" x:Key="ElementHeightSmall">
        <On Platform="WinUI" Value="24" />
        <On Platform="Default" Value="32" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="ElementHeightMedium">
        <On Platform="WinUI" Value="28" />
        <On Platform="Default" Value="36" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="ElementHeightDefault">
        <On Platform="WinUI" Value="32" />
        <On Platform="iOS" Value="36" />
        <On Platform="Default" Value="44" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="ElementHeightLarge">
        <On Platform="WinUI" Value="40" />
        <On Platform="iOS" Value="40" />
        <On Platform="Default" Value="56" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="FooterHeight">
        <On Platform="WinUI" Value="24" />
        <On Platform="Default" Value="36" />
    </OnPlatform>

    <!-- ====================================================================
         ADAPTIVE PADDINGS (Thickness)
         ==================================================================== -->
    <OnPlatform x:TypeArguments="Thickness" x:Key="PaddingXSmall">
        <On Platform="WinUI" Value="4,4" />
        <On Platform="Default" Value="4" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="Thickness" x:Key="PaddingSmall">
        <On Platform="WinUI" Value="2" />
        <On Platform="Default" Value="8" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="Thickness" x:Key="PaddingMedium">
        <On Platform="WinUI" Value="4" />
        <On Platform="Default" Value="12" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="Thickness" x:Key="PaddingLarge">
        <On Platform="WinUI" Value="8" />
        <On Platform="Default" Value="16" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="Thickness" x:Key="PaddingButton">
        <On Platform="WinUI" Value="8,4" />
        <On Platform="Default" Value="14,10" />
    </OnPlatform>

    <!-- Padding para botones de acción con iconos -->
    <OnPlatform x:TypeArguments="Thickness" x:Key="PaddingActionButton">
        <On Platform="WinUI" Value="10,6" />
        <On Platform="Default" Value="10,8" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="Thickness" x:Key="PaddingEntry">
        <On Platform="WinUI" Value="6,4" />
        <On Platform="Default" Value="10,8" />
    </OnPlatform>

    <!-- Padding para items de sidebar/lista lateral -->
    <OnPlatform x:TypeArguments="Thickness" x:Key="PaddingSidebarItem">
        <On Platform="WinUI" Value="10,0" />
        <On Platform="iOS" Value="12,4" />
        <On Platform="Default" Value="16,10" />
    </OnPlatform>

    <!-- Margin vertical para secciones -->
    <OnPlatform x:TypeArguments="Thickness" x:Key="MarginVerticalSection">
        <On Platform="WinUI" Value="0,3,0,3" />
        <On Platform="Default" Value="0,20,0,20" />
    </OnPlatform>

    <!-- Margin superior pequeño -->
    <OnPlatform x:TypeArguments="Thickness" x:Key="MarginTopSmall">
        <On Platform="WinUI" Value="0,3,0,0" />
        <On Platform="Default" Value="0,10,0,0" />
    </OnPlatform>

    <!-- ====================================================================
         ADAPTIVE CORNER RADIUS
         ==================================================================== -->
    <OnPlatform x:TypeArguments="x:Int32" x:Key="CornerRadiusSmall">
        <On Platform="WinUI" Value="4" />
        <On Platform="Default" Value="6" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Int32" x:Key="CornerRadiusMedium">
        <On Platform="WinUI" Value="6" />
        <On Platform="Default" Value="8" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Int32" x:Key="CornerRadiusLarge">
        <On Platform="WinUI" Value="8" />
        <On Platform="Default" Value="12" />
    </OnPlatform>

    <!-- ====================================================================
         ADAPTIVE ICON SIZES
         Windows usa iconos más pequeños para UI más compacta (~50% del tamaño Mac).
         ==================================================================== -->
    <OnPlatform x:TypeArguments="x:Double" x:Key="IconSizeXSmall">
        <On Platform="WinUI" Value="6" />
        <On Platform="Default" Value="10" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="IconSizeSmall">
        <On Platform="WinUI" Value="8" />
        <On Platform="Default" Value="14" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="IconSizeMedium">
        <On Platform="WinUI" Value="10" />
        <On Platform="Default" Value="16" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="IconSizeDefault">
        <On Platform="WinUI" Value="11" />
        <On Platform="Default" Value="18" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="IconSizeLarge">
        <On Platform="WinUI" Value="12" />
        <On Platform="Default" Value="24" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="IconSizeXLarge">
        <On Platform="WinUI" Value="16" />
        <On Platform="Default" Value="32" />
    </OnPlatform>

    <!-- Tamaño de iconos para items de menú lateral principal -->
    <OnPlatform x:TypeArguments="x:Double" x:Key="IconSizeSidebarMenu">
        <On Platform="WinUI" Value="14" />
        <On Platform="Default" Value="20" />
    </OnPlatform>

    <!-- Tamaño de iconos para sub-items del menú lateral (sesiones, carpetas inteligentes) -->
    <OnPlatform x:TypeArguments="x:Double" x:Key="IconSizeSidebarSubItem">
        <On Platform="WinUI" Value="12" />
        <On Platform="Default" Value="16" />
    </OnPlatform>

    <!-- Tamaño de fuente para items del menú lateral principal -->
    <OnPlatform x:TypeArguments="x:Double" x:Key="FontSizeSidebarMenu">
        <On Platform="WinUI" Value="12" />
        <On Platform="MacCatalyst" Value="17" />
        <On Platform="Default" Value="15" />
    </OnPlatform>

    <!-- Tamaño de fuente para sub-items del menú lateral (mismo que items principales) -->
    <OnPlatform x:TypeArguments="x:Double" x:Key="FontSizeSidebarSubItem">
        <On Platform="WinUI" Value="12" />
        <On Platform="MacCatalyst" Value="17" />
        <On Platform="Default" Value="15" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="IconSizeXXLarge">
        <On Platform="WinUI" Value="24" />
        <On Platform="Default" Value="48" />
    </OnPlatform>

    <OnPlatform x:TypeArguments="x:Double" x:Key="IconSizeHuge">
        <On Platform="WinUI" Value="40" />
        <On Platform="Default" Value="80" />
    </OnPlatform>

    <!-- Text styles (reutilizables) -->
    <Style TargetType="Label" x:Key="TextDisplay">
        <Setter Property="FontFamily" Value="{StaticResource AppFontDisplay}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeDisplay}" />
    </Style>

    <Style TargetType="Label" x:Key="TextTitle">
        <Setter Property="FontFamily" Value="{StaticResource AppFontDisplay}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeTitle}" />
    </Style>

    <Style TargetType="Label" x:Key="TextSubtitle">
        <Setter Property="FontFamily" Value="{StaticResource AppFontEmphasis}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeSubtitle}" />
    </Style>

    <Style TargetType="Label" x:Key="TextBody">
        <Setter Property="FontFamily" Value="{StaticResource AppFontBody}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
    </Style>

    <Style TargetType="Label" x:Key="TextCaption">
        <Setter Property="FontFamily" Value="{StaticResource AppFontBody}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeCaption}" />
    </Style>

    <!-- ====================================================================
         SIDEBAR MENU ITEM STYLES
         Estilos para los items del menú lateral (Galería, Diario, Sesiones, etc.)
         ==================================================================== -->
    
    <!-- Estilo para el contenedor Border de items del menú lateral -->
    <Style TargetType="Border" x:Key="SidebarMenuItemBorder">
        <Setter Property="Margin" Value="0" />
        <Setter Property="Padding">
            <Setter.Value>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS" Value="0" />
                    <On Platform="Default" Value="{StaticResource PaddingXSmall}" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Stroke" Value="{x:Null}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape" Value="RoundRectangle 4" />
        <Setter Property="HorizontalOptions" Value="Fill" />
    </Style>

    <!-- Estilo para el Label de items del menú lateral -->
    <Style TargetType="Label" x:Key="SidebarMenuItemLabel">
        <Setter Property="FontFamily" Value="{StaticResource AppFontBody}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeSidebarMenu}" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
    </Style>

    <!-- Estilo para items de menú lateral hijo/sub-item (con margen izquierdo) -->
    <Style TargetType="Border" x:Key="SidebarMenuSubItemBorder" BasedOn="{StaticResource SidebarMenuItemBorder}">
        <Setter Property="Margin">
            <Setter.Value>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS" Value="24,0,0,0" />
                    <On Platform="WinUI" Value="24,0,0,0" />
                    <On Platform="Default" Value="48,0,0,0" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="Padding">
            <Setter.Value>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS" Value="10,8,4,8" />
                    <On Platform="Default" Value="10,6,4,6" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="StrokeShape" Value="RoundRectangle 6" />
    </Style>

    <!-- Estilo para el Label de sub-items del menú lateral -->
    <Style TargetType="Label" x:Key="SidebarMenuSubItemLabel">
        <Setter Property="FontFamily" Value="{StaticResource AppFontBody}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeSidebarSubItem}" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="LineBreakMode" Value="TailTruncation" />
    </Style>

    <!-- ====================================================================
         OVERLAY CONTEXT MENU STYLES
         Estilos para menús contextuales tipo overlay (ej: Mi biblioteca, Sesiones)
         ==================================================================== -->

    <!-- Contenedor del menú contextual (el panel flotante) -->
    <Style TargetType="Border" x:Key="ContextMenuOverlayBorder">
        <Setter Property="Padding" Value="8" />
        <Setter Property="BackgroundColor" Value="#FF2A2A2A" />
        <Setter Property="Stroke" Value="#FF6A6A6A" />
        <Setter Property="StrokeThickness" Value="0.5" />
        <Setter Property="StrokeShape" Value="RoundRectangle 10" />
        <Setter Property="HorizontalOptions" Value="Start" />
        <Setter Property="VerticalOptions" Value="Start" />
    </Style>

    <!-- Fila/item clicable dentro del menú contextual -->
    <Style TargetType="Border" x:Key="ContextMenuItemBorder">
        <Setter Property="Padding">
            <Setter.Value>
                <OnPlatform x:TypeArguments="Thickness">
                    <On Platform="iOS" Value="10,2,4,2" />
                    <On Platform="Default" Value="10,6,4,6" />
                </OnPlatform>
            </Setter.Value>
        </Setter>
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="Stroke" Value="{x:Null}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape" Value="RoundRectangle 6" />
    </Style>

    <!-- Estilo para el Label de items del menú contextual -->
    <Style TargetType="Label" x:Key="ContextMenuItemLabel">
        <Setter Property="FontFamily" Value="{StaticResource AppFontBody}" />
        <Setter Property="FontSize" Value="{StaticResource FontSizeSidebarSubItem}" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
    </Style>

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}" />
    </Style>

    <Style TargetType="IndicatorView">
        <Setter Property="IndicatorColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}"/>
        <Setter Property="SelectedIndicatorColor" Value="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray100}}"/>
    </Style>

    <Style TargetType="Border">
        <Setter Property="Stroke" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}" />
        <Setter Property="StrokeShape" Value="Rectangle"/>
        <Setter Property="StrokeThickness" Value="1"/>
    </Style>

    <Style TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource PrimaryDarkText}}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}" />
        <Setter Property="FontFamily" Value="{StaticResource AppFontEmphasis}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMedium}"/>
        <Setter Property="Padding" Value="{StaticResource PaddingButton}"/>
        <Setter Property="MinimumHeightRequest" Value="{StaticResource ElementHeightDefault}"/>
        <Setter Property="MinimumWidthRequest" Value="{StaticResource ElementHeightDefault}"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray950}, Dark={StaticResource Gray200}}" />
                            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver" />
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource White}}" />
        <Setter Property="MinimumHeightRequest" Value="{StaticResource ElementHeightSmall}"/>
        <Setter Property="MinimumWidthRequest" Value="{StaticResource ElementHeightSmall}"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Color" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="{StaticResource AppFontBody}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="MinimumHeightRequest" Value="{StaticResource ElementHeightDefault}"/>
        <Setter Property="MinimumWidthRequest" Value="{StaticResource ElementHeightDefault}"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="{StaticResource AppFontBody}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}" />
        <Setter Property="MinimumHeightRequest" Value="{StaticResource ElementHeightDefault}"/>
        <Setter Property="MinimumWidthRequest" Value="{StaticResource ElementHeightDefault}"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="{StaticResource AppFontBody}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}" />
        <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}" />
        <Setter Property="MinimumHeightRequest" Value="{StaticResource ElementHeightDefault}"/>
        <Setter Property="MinimumWidthRequest" Value="{StaticResource ElementHeightDefault}"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Frame">
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray950}}" />
        <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMedium}" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Black}}" />
    </Style>

    <Style TargetType="ImageButton">
        <Setter Property="Opacity" Value="1" />
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="BorderWidth" Value="0"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="MinimumHeightRequest" Value="{StaticResource ElementHeightDefault}"/>
        <Setter Property="MinimumWidthRequest" Value="{StaticResource ElementHeightDefault}"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="Opacity" Value="0.5" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="PointerOver" />
                </VisualStateGroup>

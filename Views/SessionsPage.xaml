<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CrownRFEP_Reader.ViewModels"
             xmlns:models="clr-namespace:CrownRFEP_Reader.Models"
             x:Class="CrownRFEP_Reader.Views.SessionsPage"
             x:DataType="vm:SessionsViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*" Padding="15">
        
        <!-- Barra de bÃºsqueda -->
        <SearchBar Grid.Row="0"
                   Placeholder="Buscar sesiones..."
                   Text="{Binding SearchText}"
                   BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   CancelButtonColor="{StaticResource Primary}"/>

        <RefreshView Grid.Row="1" 
                     Command="{Binding RefreshCommand}" 
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding FilteredSessions}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Session">
                        <SwipeView>
                            <SwipeView.RightItems>
                                <SwipeItems>
                                    <SwipeItem Text="Eliminar"
                                               BackgroundColor="Red"
                                               Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SessionsViewModel}}, Path=DeleteSessionCommand}"
                                               CommandParameter="{Binding .}"/>
                                </SwipeItems>
                            </SwipeView.RightItems>
                            
                            <Frame Margin="0,8" Padding="15" CornerRadius="12" HasShadow="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SessionsViewModel}}, Path=ViewSessionCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                                
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                    <Label Grid.Row="0" 
                                           Text="{Binding DisplayName}" 
                                           FontSize="18" 
                                           FontAttributes="Bold"/>
                                    
                                    <HorizontalStackLayout Grid.Row="1" Spacing="10">
                                        <Label Text="ðŸ“" FontSize="14"/>
                                        <Label Text="{Binding Lugar}" FontSize="14" TextColor="Gray"/>
                                    </HorizontalStackLayout>
                                    
                                    <HorizontalStackLayout Grid.Row="2" Spacing="15">
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="ðŸ“…" FontSize="12"/>
                                            <Label Text="{Binding FechaDateTime, StringFormat='{0:dd/MM/yyyy}'}" 
                                                   FontSize="12" 
                                                   TextColor="Gray"/>
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="ðŸŽ¬" FontSize="12"/>
                                            <Label FontSize="12" TextColor="Gray">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding VideoCount}" />
                                                        <Span Text=" videos" />
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Spacing="5">
                                            <Label Text="ðŸ‘¤" FontSize="12"/>
                                            <Label Text="{Binding Coach}" FontSize="12" TextColor="Gray"/>
                                        </HorizontalStackLayout>
                                    </HorizontalStackLayout>
                                    
                                    <Label Grid.RowSpan="3" 
                                           Grid.Column="1" 
                                           Text="â€º" 
                                           FontSize="28" 
                                           TextColor="Gray"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </Frame>
                        </SwipeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="40">
                        <Label Text="ðŸ”" FontSize="48" HorizontalOptions="Center"/>
                        <Label Text="No se encontraron sesiones" 
                               FontSize="18" 
                               HorizontalOptions="Center" 
                               TextColor="Gray"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CrownRFEP_Reader.Views.ImportPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:CrownRFEP_Reader.Behaviors"
    xmlns:controls="clr-namespace:CrownRFEP_Reader.Views.Controls"
    xmlns:models="clr-namespace:CrownRFEP_Reader.Models"
    xmlns:vm="clr-namespace:CrownRFEP_Reader.ViewModels"
    x:DataType="vm:ImportViewModel"
    BackgroundColor="#FF121212">

    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
        <controls:TopTabsBar
            Grid.Row="0"
            HorizontalOptions="Center"
            VerticalOptions="Start" />

        <Grid
            Grid.Row="1"
            Padding="16"
            ColumnDefinitions="340,*,1.3*"
            ColumnSpacing="12">

            <!--  COLUMNA 1: Árbol de carpetas  -->
            <Border
                Grid.Column="0"
                BackgroundColor="#FF1E1E1E"
                Stroke="#FF3B3B3B"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0">
                <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
                    <!--  Cabecera  -->
                    <Border
                        Grid.Row="0"
                        Padding="10,8"
                        BackgroundColor="#FF2D2D2D"
                        StrokeThickness="0">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                            <Button
                                Grid.Column="0"
                                Padding="6"
                                BackgroundColor="Transparent"
                                BorderWidth="0"
                                Command="{Binding RefreshCommand}"
                                HeightRequest="{StaticResource ElementHeightDefault}"
                                WidthRequest="{StaticResource ElementHeightDefault}">
                                <Button.ImageSource>
                                    <FontImageSource
                                        Glyph="↻"
                                        Size="24"
                                        Color="#FF878787" />
                                </Button.ImageSource>
                            </Button>

                            <Label
                                Grid.Column="1"
                                FontSize="{StaticResource FontSizeSubtitle}"
                                Text="Carpetas"
                                TextColor="White"
                                VerticalOptions="Center" />

                            <Button
                                Grid.Column="2"
                                Padding="16,6"
                                BackgroundColor="#FF3B3B3B"
                                Command="{Binding AddVideosWithPickerCommand}"
                                CornerRadius="4"
                                FontSize="{StaticResource FontSizeBody}"
                                Text="Buscar..."
                                TextColor="White" />
                        </Grid>
                    </Border>

                    <!--  Árbol de carpetas  -->
                    <CollectionView
                        Grid.Row="1"
                        BackgroundColor="Transparent"
                        ItemsSource="{Binding FlatItems}"
                        SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                        SelectionMode="Single" Margin="0,20,0,0">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:FileSystemItem">
                                <Border
                                    Padding="0"
                                    BackgroundColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}"
                                    HeightRequest="{StaticResource ElementHeightMedium}"
                                    StrokeThickness="0">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ImportViewModel}}, Path=SelectItemCommand}" CommandParameter="{Binding .}" />
                                        <TapGestureRecognizer
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ImportViewModel}}, Path=ToggleExpandCommand}"
                                            CommandParameter="{Binding .}"
                                            NumberOfTapsRequired="2" />
                                    </Border.GestureRecognizers>

                                    <Grid
                                        Padding="6,0"
                                        ColumnDefinitions="Auto,Auto,Auto,*"
                                        ColumnSpacing="3">
                                        <BoxView
                                            Grid.Column="0"
                                            BackgroundColor="Transparent"
                                            WidthRequest="{Binding Indentation}" />

                                        <Border
                                            Grid.Column="1"
                                            BackgroundColor="Transparent"
                                            HeightRequest="18"
                                            IsVisible="{Binding CanExpand}"
                                            WidthRequest="18" StrokeThickness="0">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ImportViewModel}}, Path=ToggleExpandCommand}" CommandParameter="{Binding .}" />
                                            </Border.GestureRecognizers>
                                            <Grid>
                                                <ActivityIndicator
                                                    HeightRequest="12"
                                                    IsRunning="{Binding IsLoading}"
                                                    IsVisible="{Binding IsLoading}"
                                                    WidthRequest="12"
                                                    Color="#FF878787" />
                                                <controls:SymbolIcon
                                                    HeightRequest="{StaticResource IconSizeSmall}"
                                                    HorizontalOptions="Center"
                                                    IsVisible="{Binding IsLoading, Converter={StaticResource InvertedBoolConverter}}"
                                                    SymbolName="{Binding ExpanderIcon}"
                                                    TintColor="White"
                                                    VerticalOptions="Center"
                                                    WidthRequest="{StaticResource IconSizeSmall}" />
                                            </Grid>
                                        </Border>

                                        <BoxView
                                            Grid.Column="1"
                                            BackgroundColor="Transparent"
                                            IsVisible="{Binding CanExpand, Converter={StaticResource InvertedBoolConverter}}"
                                            WidthRequest="18" />

                                        <controls:SymbolIcon
                                            Grid.Column="2"
                                            Margin="2,0"
                                            HeightRequest="{StaticResource IconSizeLarge}"
                                            SymbolName="folder.fill"
                                            TintColor="{Binding IconColor}"
                                            WidthRequest="{StaticResource IconSizeLarge}" />

                                        <Label
                                            Grid.Column="3"
                                            FontSize="{StaticResource FontSizeBody}"
                                            LineBreakMode="TailTruncation"
                                            Text="{Binding Name}"
                                            TextColor="{Binding IsCrownFile, Converter={StaticResource CrownFileColorConverter}}"
                                            VerticalOptions="Center" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!--  Ruta actual  -->
                    <Border
                        Grid.Row="2"
                        Padding="10,6"
                        BackgroundColor="#FF2D2D2D"
                        StrokeThickness="0">
                        <Label
                            FontSize="{StaticResource FontSizeSmall}"
                            LineBreakMode="TailTruncation"
                            Text="{Binding CurrentPath}"
                            TextColor="#FF878787" />
                    </Border>
                </Grid>
            </Border>

            <!--  COLUMNA 2: Archivos de video de la carpeta seleccionada  -->
            <Border
                Grid.Column="1"
                BackgroundColor="#FF1E1E1E"
                Stroke="#FF3B3B3B"
                StrokeShape="RoundRectangle 10"
                StrokeThickness="0">
                <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
                    <!--  Cabecera  -->
                    <Border
                        Grid.Row="0"
                        Padding="10,8"
                        BackgroundColor="#FF2D2D2D"
                        StrokeThickness="0">
                        <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8">
                            <Label
                                Grid.Column="0"
                                FontSize="{StaticResource FontSizeBody}"
                                LineBreakMode="TailTruncation"
                                Text="{Binding SelectedFolderInfo}"
                                TextColor="White"
                                VerticalOptions="Center" />
                            <Button
                                Grid.Column="1"
                                Padding="8,4"
                                BackgroundColor="#FF464646"
                                Command="{Binding AddAllFolderVideosCommand}"
                                CornerRadius="4"
                                FontSize="{StaticResource FontSizeCaption}"
                                Text="+ Todos"
                                TextColor="White" />
                        </Grid>
                    </Border>

                    <!--  Lista de archivos de video  -->
                    <Grid Grid.Row="1">
                        <!--  Placeholder si no hay videos  -->
                        <VerticalStackLayout
                            HorizontalOptions="Center"
                            IsVisible="{Binding FolderFiles.Count, Converter={StaticResource IsZeroConverter}}"
                            Spacing="8"
                            VerticalOptions="Center">
                            <Label
                                FontSize="{StaticResource FontSizeSubtitle}"
                                HorizontalOptions="Center"
                                Text="Selecciona una carpeta"
                                TextColor="#FF878787" />
                        </VerticalStackLayout>

                        <!--  Lista de videos  -->
                        <CollectionView
                            Margin="40,0,40,0"
                            BackgroundColor="Transparent"
                            ItemsSource="{Binding FolderFiles}"
                            SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:FileSystemItem">
                                    <Border
                                        Margin="0"
                                        Padding="6,2"
                                        BackgroundColor="{Binding IsAddedToSession, Converter={StaticResource BoolToColorConverter}, ConverterParameter=#2066BB6A|Transparent}"
                                        StrokeShape="RoundRectangle 4"
                                        StrokeThickness="0">
                                        <Border.GestureRecognizers>
                                            <DragGestureRecognizer
                                                CanDrag="True"
                                                DragStarting="OnVideoDragStarting" />
                                        </Border.GestureRecognizers>
                                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="4">
                                            <controls:SymbolIcon
                                                Grid.Column="0"
                                                HeightRequest="{StaticResource IconSizeLarge}"
                                                SymbolName="{Binding Icon}"
                                                TintColor="{Binding IsAddedToSession, Converter={StaticResource BoolToColorConverter}, ConverterParameter=#FF66BB6A|#FFD9D9D9}"
                                                WidthRequest="{StaticResource IconSizeLarge}" />

                                            <Label
                                                Grid.Column="1"
                                                FontSize="{StaticResource FontSizeBody}"
                                                LineBreakMode="TailTruncation"
                                                Text="{Binding Name}"
                                                TextColor="{Binding IsAddedToSession, Converter={StaticResource BoolToColorConverter}, ConverterParameter=#FF66BB6A|#FFFFFFFF}"
                                                VerticalOptions="Center" />

                                            <!--  Botón añadir (visible cuando NO está añadido)  -->
                                            <Border
                                                Grid.Column="2"
                                                Padding="2,2"
                                                BackgroundColor="#FF464646"
                                                HeightRequest="{StaticResource ElementHeightLarge}"
                                                IsVisible="{Binding IsAddedToSession, Converter={StaticResource InvertedBoolConverter}}"
                                                StrokeShape="RoundRectangle 4"
                                                StrokeThickness="0"
                                                WidthRequest="56">
                                                <Border.GestureRecognizers>
                                                    <TapGestureRecognizer
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ImportViewModel}}, Path=AddVideoFromFolderListCommand}"
                                                        CommandParameter="{Binding .}" />
                                                </Border.GestureRecognizers>
                                                <controls:SymbolIcon
                                                    HeightRequest="{StaticResource IconSizeDefault}"
                                                    HorizontalOptions="Center"
                                                    SymbolName="plus.circle"
                                                    TintColor="#FFD1D1D1"
                                                    VerticalOptions="Center"
                                                    WidthRequest="{StaticResource IconSizeDefault}" />
                                            </Border>

                                            <!--  Indicador añadido (visible cuando SÍ está añadido)  -->
                                            <Border
                                                Grid.Column="2"
                                                Padding="2,2"
                                                BackgroundColor="#FF2A5A2A"
                                                HeightRequest="{StaticResource ElementHeightLarge}"
                                                IsVisible="{Binding IsAddedToSession}"
                                                StrokeShape="RoundRectangle 4"
                                                StrokeThickness="0"
                                                WidthRequest="56">
                                                <controls:SymbolIcon
                                                    HeightRequest="{StaticResource IconSizeDefault}"
                                                    HorizontalOptions="Center"
                                                    SymbolName="checkmark.circle.fill"
                                                    TintColor="#FF66BB6A"
                                                    VerticalOptions="Center"
                                                    WidthRequest="{StaticResource IconSizeDefault}" />
                                            </Border>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>

                    <!--  Info de archivos  -->
                    <Border
                        Grid.Row="2"
                        Padding="10,6"
                        BackgroundColor="#FF2D2D2D"
                        StrokeThickness="0">
                        <Label
                            FontSize="{StaticResource FontSizeSmall}"
                            Text="{Binding FolderFilesInfo}"
                            TextColor="#FF878787" />
                    </Border>
                </Grid>
            </Border>

            <!--  COLUMNA 3: Zona de Drop y Sesión Customizada  -->
            <Grid Grid.Column="2" RowDefinitions="*,Auto">

                <!--  Panel de videos pendientes con zona de drop  -->
                <Border
                    Grid.Row="0"
                    BackgroundColor="{Binding IsDragOver, Converter={StaticResource BoolToColorConverter}, ConverterParameter=#FF2A4A6A|#FF1E1E1E}"
                    Stroke="{Binding IsDragOver, Converter={StaticResource BoolToColorConverter}, ConverterParameter=#FF4A9ADA|#FF3B3B3B}"
                    StrokeDashArray="5,3"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="0">

                    <!--  Drop gesture recognizer  -->
                    <Border.GestureRecognizers>
                        <DropGestureRecognizer AllowDrop="True" />
                    </Border.GestureRecognizers>
                    <Border.Behaviors>
                        <behaviors:DropZoneBehavior DropCommand="{Binding FilesDroppedCommand}" IsDragOver="{Binding IsDragOver, Mode=TwoWay}" />
                    </Border.Behaviors>

                    <Grid RowDefinitions="Auto,*,Auto" RowSpacing="0">
                        <!--  Cabecera  -->
                        <Border
                            Grid.Row="0"
                            Padding="12,10"
                            BackgroundColor="#FF2D2D2D"
                            StrokeThickness="0">
                            <Grid ColumnDefinitions="*,Auto">
                                <Label
                                    Grid.Column="0"
                                    FontAttributes="Bold"
                                    FontSize="{StaticResource FontSizeBody}"
                                    Text="Videos para Sesión"
                                    TextColor="White" />
                                <Button
                                    Grid.Column="1"
                                    Padding="8,4"
                                    BackgroundColor="#FF464646"
                                    Command="{Binding ClearAllVideosCommand}"
                                    CornerRadius="4"
                                    FontSize="{StaticResource FontSizeSmall}"
                                    Text="Limpiar"
                                    TextColor="White" />
                            </Grid>
                        </Border>

                        <!--  Lista de videos o placeholder  -->
                        <Grid Grid.Row="1">
                            <!--  Placeholder cuando no hay videos  -->
                            <VerticalStackLayout
                                HorizontalOptions="Center"
                                IsVisible="{Binding PendingVideos.Count, Converter={StaticResource IsZeroConverter}}"
                                Spacing="12"
                                VerticalOptions="Center">
                                <Label
                                    FontSize="{StaticResource FontSizeSubtitle}"
                                    HorizontalOptions="Center"
                                    Text="Arrastra videos aquí"
                                    TextColor="#FF878787" />
                                <Label
                                    FontSize="{StaticResource FontSizeSmall}"
                                    HorizontalOptions="Center"
                                    Text="o usa los botones del explorador"
                                    TextColor="#FF666666" />
                            </VerticalStackLayout>

                            <!--  Lista de videos pendientes  -->
                            <CollectionView
                                Margin="8"
                                BackgroundColor="Transparent"
                                ItemsSource="{Binding PendingVideos}"
                                SelectionMode="None">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="vm:PendingVideoItem">
                                        <Border
                                            Margin="0,4"
                                            Padding="12"
                                            BackgroundColor="#FF2A2A2A"
                                            Stroke="#FF3B3B3B"
                                            StrokeShape="RoundRectangle 8"
                                            StrokeThickness="0">
                                            <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="10">
                                                <!--  Icono  -->
                                                <controls:SymbolIcon
                                                    Grid.Column="0"
                                                    HeightRequest="{StaticResource IconSizeLarge}"
                                                    SymbolName="{Binding Icon}"
                                                    TintColor="{Binding IconColor}"
                                                    WidthRequest="{StaticResource IconSizeLarge}" />

                                                <!--  Info del video  -->
                                                <VerticalStackLayout Grid.Column="1" Spacing="2">
                                                    <Label
                                                        FontSize="{StaticResource FontSizeBody}"
                                                        LineBreakMode="TailTruncation"
                                                        Text="{Binding FileName}"
                                                        TextColor="White" />
                                                    <Label
                                                        FontSize="{StaticResource FontSizeSmall}"
                                                        Text="{Binding FileSizeFormatted}"
                                                        TextColor="#FF666666" />
                                                </VerticalStackLayout>

                                                <!--  Extensión badge  -->
                                                <Border
                                                    Grid.Column="2"
                                                    Padding="6,2"
                                                    BackgroundColor="#FF3B3B3B"
                                                    StrokeShape="RoundRectangle 4"
                                                    StrokeThickness="0">
                                                    <Label
                                                        FontSize="{StaticResource FontSizeCaption}"
                                                        Text="{Binding Extension}"
                                                        TextColor="#FF878787"
                                                        TextTransform="Uppercase" />
                                                </Border>

                                                <!--  Botón eliminar  -->
                                                <Button
                                                    Grid.Column="3"
                                                    Padding="4"
                                                    BackgroundColor="Transparent"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ImportViewModel}}, Path=RemoveVideoCommand}"
                                                    CommandParameter="{Binding .}"
                                                    FontSize="{StaticResource FontSizeBody}"
                                                    HeightRequest="{StaticResource ElementHeightMedium}"
                                                    Text="✕"
                                                    TextColor="#FF878787"
                                                    WidthRequest="{StaticResource ElementHeightMedium}" />
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>

                        <!--  Info de videos  -->
                        <Border
                            Grid.Row="2"
                            Padding="12,8"
                            BackgroundColor="#FF2D2D2D"
                            StrokeThickness="0">
                            <Label
                                FontSize="{StaticResource FontSizeSmall}"
                                Text="{Binding PendingVideosInfo}"
                                TextColor="#FF878787" />
                        </Border>
                    </Grid>
                </Border>

                <!--  Panel para crear sesión customizada  -->
                <Border
                    Grid.Row="1"
                    Margin="0,16,0,0"
                    Padding="16"
                    BackgroundColor="#FF1E1E1E"
                    Stroke="#FF3B3B3B"
                    StrokeShape="RoundRectangle 12"
                    StrokeThickness="0">
                    <VerticalStackLayout Spacing="12">
                        <Label
                            FontAttributes="Bold"
                            FontSize="{StaticResource FontSizeBody}"
                            Text="Crear Sesión Customizada"
                            TextColor="White" />

                        <!--  Nombre de la sesión  -->
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontSize="{StaticResource FontSizeSmall}"
                                Text="Nombre de la sesión"
                                TextColor="#FF878787" />
                            <Entry
                                BackgroundColor="#FF2A2A2A"
                                FontSize="{StaticResource FontSizeBody}"
                                Placeholder="Ej: Bajadas largas"
                                PlaceholderColor="#FF666666"
                                Text="{Binding CustomSessionName}"
                                TextColor="White" />
                        </VerticalStackLayout>

                        <!--  Ubicación  -->
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontSize="{StaticResource FontSizeSmall}"
                                Text="Ubicación"
                                TextColor="#FF878787" />
                            <Entry
                                BackgroundColor="#FF2A2A2A"
                                FontSize="{StaticResource FontSizeBody}"
                                Placeholder="Ej: La Seu d'Urgell"
                                PlaceholderColor="#FF666666"
                                Text="{Binding CustomSessionLocation}"
                                TextColor="White" />
                        </VerticalStackLayout>

                        <!--  Fecha  -->
                        <VerticalStackLayout Spacing="4">
                            <Label
                                FontSize="{StaticResource FontSizeSmall}"
                                Text="Fecha"
                                TextColor="#FF878787" />
                            <DatePicker
                                BackgroundColor="#FF2A2A2A"
                                Date="{Binding CustomSessionDate}"
                                FontSize="{StaticResource FontSizeBody}"
                                TextColor="White" />
                        </VerticalStackLayout>

                        <!--  Botón crear sesión  -->
                        <Button
                            Margin="0,8,0,0"
                            Padding="16,12"
                            BackgroundColor="#FF464646"
                            Command="{Binding CreateCustomSessionCommand}"
                            CornerRadius="4"
                            FontSize="{StaticResource FontSizeBody}"
                            IsEnabled="{Binding CanCreateCustomSession}"
                            Text="Crear Sesión"
                            TextColor="White" />

                        <!--  Progreso de importación  -->
                        <VerticalStackLayout IsVisible="{Binding IsImporting}" Spacing="8">
                            <ProgressBar
                                HeightRequest="6"
                                Progress="{Binding ImportProgressValue, Converter={StaticResource ProgressConverter}}"
                                ProgressColor="#FF4CAF50" />
                            <Label
                                FontSize="{StaticResource FontSizeSmall}"
                                HorizontalOptions="Center"
                                Text="{Binding ImportProgressText}"
                                TextColor="#FF878787" />

                            <Button
                                Padding="16,12"
                                BackgroundColor="#FF464646"
                                Command="{Binding CancelImportCommand}"
                                CornerRadius="4"
                                FontSize="{StaticResource FontSizeBody}"
                                Text="Cancelar"
                                TextColor="White" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!--  Indicador de carga global  -->
            <ActivityIndicator
                Grid.ColumnSpan="3"
                HorizontalOptions="Center"
                IsRunning="{Binding IsBusy}"
                IsVisible="{Binding IsBusy}"
                VerticalOptions="Center"
                Color="{StaticResource Primary}" />
        </Grid>

        <!--  Footer de la aplicación  -->
        <controls:AppFooter Grid.Row="2" />
    </Grid>
</ContentPage>
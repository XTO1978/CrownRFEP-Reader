<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CrownRFEP_Reader.ViewModels"
             xmlns:models="clr-namespace:CrownRFEP_Reader.Models"
             xmlns:services="clr-namespace:CrownRFEP_Reader.Services"
             xmlns:controls="clr-namespace:CrownRFEP_Reader.Views.Controls"
             x:Class="CrownRFEP_Reader.Views.SessionDetailPage"
             x:DataType="vm:SessionDetailViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="15">
        
        <!-- Info de la sesiÃ³n -->
        <Frame Grid.Row="0" Padding="15" CornerRadius="12" HasShadow="True" Margin="0,0,0,10">
            <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*">
                <Label Grid.ColumnSpan="2" 
                       Text="{Binding Session.DisplayName}" 
                       FontSize="{StaticResource FontSizeHeader}" 
                       FontAttributes="Bold"/>
                
                <HorizontalStackLayout Grid.Row="1" Spacing="8" Margin="0,8,0,0">
                    <Label Text="ðŸ“" FontSize="{StaticResource FontSizeBody}"/>
                    <Label Text="{Binding Session.Lugar}" FontSize="{StaticResource FontSizeBody}"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="8" Margin="0,8,0,0">
                    <Label Text="ðŸ“…" FontSize="{StaticResource FontSizeBody}"/>
                    <Label Text="{Binding Session.FechaDateTime, StringFormat='{0:dd/MM/yyyy HH:mm}'}" FontSize="{StaticResource FontSizeBody}"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Grid.Row="2" Spacing="8" Margin="0,5,0,0">
                    <Label Text="ðŸ‘¤" FontSize="{StaticResource FontSizeBody}"/>
                    <Label Text="{Binding Session.Coach}" FontSize="{StaticResource FontSizeBody}"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Grid.Row="2" Grid.Column="1" Spacing="8" Margin="0,5,0,0">
                    <Label Text="ðŸŽ¬" FontSize="{StaticResource FontSizeBody}"/>
                    <Label FontSize="{StaticResource FontSizeBody}">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="{Binding FilteredVideos.Count}" />
                                <Span Text=" de " />
                                <Span Text="{Binding AllVideos.Count}" />
                                <Span Text=" videos" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </HorizontalStackLayout>
                
                <Label Grid.Row="3" Grid.ColumnSpan="2" 
                       Text="{Binding Session.Participantes}" 
                       FontSize="{StaticResource FontSizeSmall}" 
                       TextColor="Gray"
                       Margin="0,8,0,0"
                       LineBreakMode="WordWrap"/>
            </Grid>
        </Frame>

        <!-- Filtros -->
        <ScrollView Grid.Row="1" Orientation="Horizontal" HorizontalScrollBarVisibility="Never" Margin="0,0,0,10">
            <HorizontalStackLayout Spacing="10">
                <Button Text="ðŸ”„ Limpiar filtros" 
                        Command="{Binding ClearFiltersCommand}"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        FontSize="{StaticResource FontSizeSmall}"
                        Padding="10,5"/>
                
                <!-- Filtros por atleta -->
                <CollectionView ItemsSource="{Binding SessionAthletes}" 
                                SelectionMode="Single"
                                HeightRequest="40"
                                VerticalOptions="Center">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal" ItemSpacing="8"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Athlete">
                            <Frame Padding="10,5" 
                                   CornerRadius="15" 
                                   HasShadow="False"
                                   BackgroundColor="{StaticResource Primary}">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SessionDetailViewModel}}, Path=FilterByAthleteCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                                <Label Text="{Binding NombreCompleto}" 
                                       TextColor="White" 
                                       FontSize="{StaticResource FontSizeSmall}"
                                       VerticalOptions="Center"/>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </HorizontalStackLayout>
        </ScrollView>

        <!-- GalerÃ­a de videos -->
        <RefreshView Grid.Row="2" 
                     Command="{Binding RefreshCommand}" 
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding FilteredVideos}"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" 
                                     Span="3" 
                                     HorizontalItemSpacing="10" 
                                     VerticalItemSpacing="10"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:VideoClip">
                        <Frame Padding="0" CornerRadius="10" HasShadow="True" IsClippedToBounds="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:SessionDetailViewModel}}, Path=PlayVideoCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            
                            <Grid RowDefinitions="120,Auto">
                                <!-- Thumbnail -->
                                <Image Source="{Binding LocalThumbnailPath}"
                                       Aspect="AspectFill"
                                       BackgroundColor="{StaticResource Gray300}"/>
                                
                                <!-- Play overlay -->
                                <Frame BackgroundColor="#80000000" 
                                       HasShadow="False" 
                                       CornerRadius="25"
                                       WidthRequest="50"
                                       HeightRequest="50"
                                       Padding="0"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center">
                                    <Label Text="â–¶" 
                                           FontSize="{StaticResource FontSizeTitle}" 
                                           TextColor="White"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Frame>
                                
                                <!-- DuraciÃ³n -->
                                <Frame BackgroundColor="#CC000000" 
                                       HasShadow="False" 
                                       CornerRadius="5"
                                       Padding="5,2"
                                       Margin="5"
                                       HorizontalOptions="End"
                                       VerticalOptions="End">
                                    <Label Text="{Binding DurationFormatted}" 
                                           FontSize="{StaticResource FontSizeCaption}" 
                                           TextColor="White"/>
                                </Frame>
                                
                                <!-- Info -->
                                <VerticalStackLayout Grid.Row="1" Padding="8" Spacing="2">
                                    <Label Text="{Binding Atleta.NombreCompleto}" 
                                           FontSize="{StaticResource FontSizeSmall}" 
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"/>
                                    <Label Text="{Binding CreationDateTime, StringFormat='{0:HH:mm}'}" 
                                           FontSize="{StaticResource FontSizeCaption}" 
                                           TextColor="Gray"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="40">
                        <Label Text="ðŸŽ¬" FontSize="{StaticResource FontSizeDisplay}" HorizontalOptions="Center"/>
                        <Label Text="No hay videos" 
                               FontSize="{StaticResource FontSizeTitle}" 
                               HorizontalOptions="Center" 
                               TextColor="Gray"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

        <!-- Indicador de carga -->
        <ActivityIndicator Grid.RowSpan="3" 
                           IsRunning="{Binding IsBusy}" 
                           IsVisible="{Binding IsBusy}"
                           Color="{StaticResource Primary}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"/>

        <!--  Footer de la aplicaciÃ³n  -->
        <controls:AppFooter Grid.Row="3" />
    </Grid>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="CrownRFEP_Reader.Views.Controls.TopTabsBar"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:behaviors="clr-namespace:CrownRFEP_Reader.Behaviors"
    xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls"
    BackgroundColor="#FF121212">

    <Grid Padding="10,0" ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnSpacing="0" HeightRequest="50">
        <Button Grid.Column="0"
                Text="Dashboard"
                Clicked="OnDashboardClicked"
                BackgroundColor="Transparent"
                TextColor="White"
                FontFamily="{StaticResource AppFontBody}"
                FontSize="16"
                Padding="16,5" Margin="6"
                CornerRadius="4">
            <Button.Behaviors>
                <behaviors:HoverBackgroundBehavior />
            </Button.Behaviors>
        </Button>

                <Button Grid.Column="2"
                Text="Atletas"
                Clicked="OnAthletesClicked"
                BackgroundColor="Transparent"
                TextColor="White"
                FontFamily="{StaticResource AppFontBody}"
                FontSize="16"
                Padding="16,5"
                Margin="6"
                CornerRadius="4">
            <Button.Behaviors>
                <behaviors:HoverBackgroundBehavior />
            </Button.Behaviors>
        </Button>
                
                <Button Grid.Column="4"
                Text="Importar"
                Clicked="OnImportClicked"
                BackgroundColor="Transparent"
                TextColor="White"
                FontFamily="{StaticResource AppFontBody}"
                FontSize="16"
                Padding="16,5"
                Margin="6"
                CornerRadius="4">
            <Button.Behaviors>
                <behaviors:HoverBackgroundBehavior />
            </Button.Behaviors>
        </Button>
                
                
                <Border
                Grid.Column="5"
                x:Name="ProfileButton"
                BackgroundColor="Transparent"
                Stroke="Transparent"
                StrokeThickness="0"
                Padding="16,5" Margin="6">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnProfileTapped" />
                </Border.GestureRecognizers>
                <Border.Behaviors>
                    <behaviors:HoverBackgroundBehavior />
                </Border.Behaviors>
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="4" />
                </Border.StrokeShape>

                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Border WidthRequest="0.6" Margin="0,0,18,0" BackgroundColor="#FF232323" Stroke="#FF757575"/>
                    <Border
                        x:Name="ProfilePhotoBorder"
                        HeightRequest="26"
                        WidthRequest="26"
                        Padding="0"
                        BackgroundColor="#FF3A3A3A"
                        Stroke="#FF555555"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 999"
                        VerticalOptions="Center">
                        <Grid>
                            <Image
                                x:Name="ProfilePhotoImage"
                                Aspect="AspectFill"
                                IsVisible="False">
                                <Image.Clip>
                                    <shapes:EllipseGeometry Center="13,13" RadiusX="13" RadiusY="13" />
                                </Image.Clip>
                            </Image>
                        </Grid>
                    </Border>

                    <Label
                        x:Name="ProfileNameLabel"
                        Text="Yo"
                        TextColor="White"
                        FontFamily="{StaticResource AppFontBody}"
                        FontSize="16"
                        LineBreakMode="TailTruncation"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
            </Border>
    </Grid>
</ContentView>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CrownRFEP_Reader.ViewModels"
             xmlns:models="clr-namespace:CrownRFEP_Reader.Models"
             xmlns:controls="clr-namespace:CrownRFEP_Reader.Views.Controls"
             x:Class="CrownRFEP_Reader.Views.AthletesPage"
             x:DataType="vm:AthletesViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,Auto,Auto,*" Padding="15">

        <controls:TopTabsBar Grid.Row="0" />

        <!-- TÃ­tulo y contador -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto" Margin="0,15,0,5">
            <HorizontalStackLayout Spacing="10">
                <Label Text="Diccionario de Atletas" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <Border BackgroundColor="{StaticResource Primary}"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 10"
                        Padding="8,2">
                    <Label Text="{Binding Athletes.Count, StringFormat='{0} registrados'}" 
                           TextColor="White"
                           FontSize="12"
                           VerticalOptions="Center"/>
                </Border>
            </HorizontalStackLayout>
            
            <Button Grid.Column="1"
                    Text="ðŸ”— Son el mismo atleta"
                    Command="{Binding MergeSelectedAthletesCommand}"
                    IsEnabled="{Binding CanMerge}"
                    BackgroundColor="#E65100"
                    TextColor="White"
                    FontSize="12"
                    Padding="10,5"
                    Margin="0,0,10,0"
                    CornerRadius="5"/>
            
            <Button Grid.Column="2"
                    Text="ðŸ”„ Consolidar automÃ¡tico"
                    Command="{Binding ConsolidateDuplicatesCommand}"
                    BackgroundColor="{StaticResource Secondary}"
                    TextColor="White"
                    FontSize="12"
                    Padding="10,5"
                    CornerRadius="5"/>
        </Grid>

        <!-- Info de selecciÃ³n -->
        <HorizontalStackLayout Grid.Row="2" Margin="0,5,0,5" Spacing="8" IsVisible="{Binding CanMerge}">
            <Label Text="ðŸ“Œ" FontSize="14"/>
            <Label Text="{Binding SelectedCount, StringFormat='{0} atletas seleccionados'}" 
                   FontSize="13"
                   TextColor="{StaticResource Primary}"
                   FontAttributes="Italic"/>
        </HorizontalStackLayout>

        <!-- Tabla de atletas registrados -->
        <Border Grid.Row="3" 
                Margin="0,5,0,0"
                Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="1">
            <Grid RowDefinitions="Auto,*">
                <!-- Encabezado -->
                <Border BackgroundColor="{StaticResource Primary}"
                        StrokeThickness="0"
                        Padding="0">
                    <Grid ColumnDefinitions="50,80,*,*" Padding="12,10">
                        <Label Text="âœ“" 
                               FontAttributes="Bold" 
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                        <Label Grid.Column="1"
                               Text="ID" 
                               FontAttributes="Bold" 
                               TextColor="White"
                               VerticalOptions="Center"/>
                        <Label Grid.Column="2" 
                               Text="Nombre" 
                               FontAttributes="Bold" 
                               TextColor="White"
                               VerticalOptions="Center"/>
                        <Label Grid.Column="3" 
                               Text="Apellido" 
                               FontAttributes="Bold" 
                               TextColor="White"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Lista de atletas -->
                <RefreshView Grid.Row="1" 
                             Command="{Binding RefreshCommand}" 
                             IsRefreshing="{Binding IsBusy}">
                    <CollectionView ItemsSource="{Binding Athletes}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Athlete">
                                <Border StrokeThickness="0,0,0,1"
                                        Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                                        BackgroundColor="{AppThemeBinding Light=White, Dark={StaticResource Gray900}}">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AthletesViewModel}}, Path=ToggleAthleteSelectionCommand}"
                                            CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                    <Grid ColumnDefinitions="50,80,*,*" Padding="12,10">
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                  CheckedChanged="OnAthleteCheckChanged"
                                                  HorizontalOptions="Center"
                                                  VerticalOptions="Center"
                                                  Color="{StaticResource Primary}"/>
                                        <Border Grid.Column="1"
                                                BackgroundColor="{StaticResource Secondary}"
                                                StrokeThickness="0"
                                                StrokeShape="RoundRectangle 4"
                                                WidthRequest="45"
                                                HeightRequest="28"
                                                HorizontalOptions="Start">
                                            <Label Text="{Binding Id}" 
                                                   TextColor="White"
                                                   FontAttributes="Bold"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Border>
                                        <Label Grid.Column="2" 
                                               Text="{Binding Nombre}" 
                                               VerticalOptions="Center"
                                               FontSize="14"/>
                                        <Label Grid.Column="3" 
                                               Text="{Binding Apellido}" 
                                               VerticalOptions="Center"
                                               FontSize="14"
                                               FontAttributes="Bold"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        
                        <CollectionView.EmptyView>
                            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="40">
                                <Label Text="ðŸƒ" FontSize="48" HorizontalOptions="Center"/>
                                <Label Text="No hay atletas registrados" 
                                       FontSize="16" 
                                       HorizontalOptions="Center" 
                                       TextColor="Gray"/>
                                <Label Text="Importa una sesiÃ³n para ver atletas aquÃ­" 
                                       FontSize="13" 
                                       HorizontalOptions="Center" 
                                       TextColor="Gray"
                                       Margin="0,5,0,0"/>
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </RefreshView>
            </Grid>
        </Border>
    </Grid>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CrownRFEP_Reader.ViewModels"
             xmlns:models="clr-namespace:CrownRFEP_Reader.Models"
             xmlns:controls="clr-namespace:CrownRFEP_Reader.Views.Controls"
             x:Class="CrownRFEP_Reader.Views.AthletesPage"
             x:DataType="vm:AthletesViewModel" BackgroundColor="#FF121212"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Padding="0" BackgroundColor="#FF121212">

        <controls:TopTabsBar Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Start"/>

        <!-- Título y contador -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto,Auto" Margin="0,15,0,5">
            <HorizontalStackLayout Spacing="10">
                <Label Text="Diccionario de Atletas" 
                       FontSize="{StaticResource FontSizeHeader}" Margin="30,0,0,0"
                       VerticalOptions="Center" TextColor="White"/>
                <Border BackgroundColor="#FF2A2A2A"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 4"
                        Padding="16,6">
                    <Label Text="{Binding Athletes.Count, StringFormat='{0} registrados'}" 
                           TextColor="White"
                           FontSize="{StaticResource FontSizeBody}"
                           VerticalOptions="Center"/>
                </Border>
            </HorizontalStackLayout>
            
            <Button Grid.Column="1"
                    Text="Son el mismo atleta"
                    Command="{Binding MergeSelectedAthletesCommand}"
                    IsEnabled="{Binding CanMerge}"
                    BackgroundColor="#FF2A2A2A"
                    TextColor="White"
                    FontSize="{StaticResource FontSizeBody}"
                    Padding="16,6"
                    Margin="0,0,10,0"
                    CornerRadius="4"/>
            
            <Button Grid.Column="2"
                    Text="Consolidar automático"
                    Command="{Binding ConsolidateDuplicatesCommand}"
                    BackgroundColor="#FF2A2A2A"
                    TextColor="White"
                    FontSize="{StaticResource FontSizeBody}"
                    Padding="16,6"
                    CornerRadius="4"/>
        </Grid>

        <!-- Info de selección -->
        <HorizontalStackLayout Grid.Row="2" Margin="0,5,0,5" Spacing="8" IsVisible="{Binding CanMerge}">
           
            <Label Text="{Binding SelectedCount, StringFormat='{0} atletas seleccionados'}" 
                   FontSize="{StaticResource FontSizeBody}"
                   TextColor="{StaticResource Primary}"
                   FontAttributes="Italic"/>
        </HorizontalStackLayout>

        <!-- Tabla de atletas registrados -->
        <Border Grid.Row="3" 
                Margin="0,5,0,0"
                Stroke="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}"
                StrokeShape="RoundRectangle 8"
                StrokeThickness="0">
            <Grid RowDefinitions="Auto,*">
                <!-- Encabezado -->
                <Border BackgroundColor="#FF121212"
                        StrokeThickness="0"
                        Padding="0">
                    <Grid ColumnDefinitions="50,80,140,140" Padding="12,10">
                        <Label Text="✓"  
                               TextColor="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                        <Label Grid.Column="1"
                               Text="ID" 
                               TextColor="White"
                               VerticalOptions="Center"/>
                        <Label Grid.Column="2" 
                               Text="Atleta" 
                               TextColor="White"
                               VerticalOptions="Center"/>
                           <Label Grid.Column="3" 
                               Text="" 
                               TextColor="White"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>

                <!-- Lista de atletas -->
                <RefreshView Grid.Row="1" 
                             Command="{Binding RefreshCommand}" 
                             IsRefreshing="{Binding IsBusy}">
                    <CollectionView ItemsSource="{Binding Athletes}"
                                    SelectionMode="None">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:Athlete">
                                <Border StrokeThickness="0,0,0,0.6"
                                        Stroke="#FF393939"
                                        BackgroundColor="#FF121212">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AthletesViewModel}}, Path=ToggleAthleteSelectionCommand}"
                                            CommandParameter="{Binding .}"/>
                                    </Border.GestureRecognizers>
                                    <Grid ColumnDefinitions="50,80,140,140" Padding="12,10">
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                  CheckedChanged="OnAthleteCheckChanged"
                                                  HorizontalOptions="Center"
                                                  VerticalOptions="Center"
                                                  Color="#FF2A2A2A"/>
                                        <Border Grid.Column="1"
                                                BackgroundColor="#FF2A2A2A"
                                                StrokeThickness="0"
                                                StrokeShape="RoundRectangle 4"
                                                WidthRequest="45"
                                                HeightRequest="28"
                                                HorizontalOptions="Start">
                                            <Label Text="{Binding Id}" 
                                                   TextColor="White"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"/>
                                        </Border>
<Label Grid.Column="2"
                                                 Grid.ColumnSpan="2"
                                                 Text="{Binding NombreCompleto}"
                                                 VerticalOptions="Center"
                                                 TextColor="White"
                                                 FontSize="{StaticResource FontSizeBody}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        
                        <CollectionView.EmptyView>
                            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="40">
                               
                                <Label Text="No hay atletas registrados" 
                                       FontSize="{StaticResource FontSizeSubtitle}" 
                                       HorizontalOptions="Center" 
                                       TextColor="Gray"/>
                                <Label Text="Importa una sesión para ver atletas aquí" 
                                       FontSize="{StaticResource FontSizeBody}" 
                                       HorizontalOptions="Center" 
                                       TextColor="Gray"
                                       Margin="0,5,0,0"/>
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </RefreshView>
            </Grid>
        </Border>

        <!--  Footer de la aplicación  -->
        <controls:AppFooter Grid.Row="4" />
    </Grid>
</ContentPage>

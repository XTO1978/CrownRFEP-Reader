<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CrownRFEP_Reader.ViewModels"
             xmlns:models="clr-namespace:CrownRFEP_Reader.Models"
             xmlns:controls="clr-namespace:CrownRFEP_Reader.Views.Controls"
             x:Class="CrownRFEP_Reader.Views.AthletesPage"
             x:DataType="vm:AthletesViewModel"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,Auto,*" Padding="15">

        <controls:TopTabsBar Grid.Row="0" />
        
        <!-- Barra de bÃºsqueda -->
        <SearchBar Grid.Row="1"
                   Placeholder="Buscar atletas..."
                   Text="{Binding SearchText}"
                   BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
                   CancelButtonColor="{StaticResource Primary}"/>

        <RefreshView Grid.Row="2" 
                     Command="{Binding RefreshCommand}" 
                     IsRefreshing="{Binding IsBusy}">
            <CollectionView ItemsSource="{Binding FilteredAthletes}"
                            SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Athlete">
                        <Frame Margin="0,8" Padding="15" CornerRadius="12" HasShadow="True">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AthletesViewModel}}, Path=ViewAthleteCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            
                            <Grid ColumnDefinitions="50,*,Auto">
                                <!-- Avatar -->
                                <Frame WidthRequest="50" 
                                       HeightRequest="50" 
                                       CornerRadius="25" 
                                       Padding="0"
                                       HasShadow="False"
                                       BackgroundColor="{StaticResource Primary}">
                                    <Label Text="ðŸƒ" 
                                           FontSize="24" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center"/>
                                </Frame>
                                
                                <!-- Info -->
                                <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0" VerticalOptions="Center">
                                    <Label Text="{Binding NombreCompleto}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding CategoriaNombre}" 
                                           FontSize="14" 
                                           TextColor="Gray"/>
                                </VerticalStackLayout>
                                
                                <!-- Favorito -->
                                <Label Grid.Column="2" 
                                       Text="{Binding IsFavorite, Converter={StaticResource FavoriteConverter}}" 
                                       FontSize="20" 
                                       VerticalOptions="Center"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="40">
                        <Label Text="ðŸƒ" FontSize="48" HorizontalOptions="Center"/>
                        <Label Text="No se encontraron atletas" 
                               FontSize="18" 
                               HorizontalOptions="Center" 
                               TextColor="Gray"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>

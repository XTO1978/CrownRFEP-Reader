                                                            Margin="0,0,2,6"
                                                            WidthRequest="60"
                                                            HeightRequest="40"
                                                            StrokeShape="RoundRectangle 2"
                                                            StrokeThickness="0"
                                                            BackgroundColor="#FF2A2A2A">

                                                                Source="{Binding LocalThumbnailPath}"
                                                                Aspect="AspectFill" />
                                                        </Border>
                                                    </DataTemplate>
                                                </BindableLayout.ItemTemplate>
                                            </FlexLayout>
                                            <Label
                                                FontSize="{StaticResource FontSizeSmall}"
                                                Text="{Binding ExtraVideosCount, StringFormat='+ {0} más'}"
